/* Cal.com Embed Styles */
.calcom-embed-container {
  @apply relative;
  min-height: 400px;
}

.calcom-iframe {
  border-radius: 0.75rem;
  transition: all 0.3s ease;
}

.calcom-iframe:hover {
  box-shadow: 0 10px 25px rgba(199, 138, 92, 0.15);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .calcom-embed-container {
    min-height: 350px;
  }
  
  .calcom-iframe {
    height: 350px !important;
  }
}

/* Loading state for Cal.com */
.calcom-loading {
  @apply flex items-center justify-center;
  background: linear-gradient(135deg, rgba(37, 53, 63, 0.5) 0%, rgba(37, 53, 63, 0.3) 100%);
  border-radius: 0.75rem;
  min-height: 400px;
}

.calcom-loading::before {
  content: "Chargement du calendrier...";
  @apply text-beige/60 text-sm;
}
